<form action="../../allitems" method="GET">
<input type="hidden" name="_method" value="PUT">
    <label for="name">Item Name:</label>
    <input type="text" id="name" name="name" required><br><br>
    <label for="description">Item Description:</label>
    <input type="text" id="description" name="description" required><br><br>
    <label for="price">Item Price:</label>
    <input type="number" id="price" name="price" required><br><br>
    <label for="image">Image:</label>
    <input type="text" id="image" name="image" required><br><br>
    <label for="CategoryId">Select Warehouse and Category:</label>
    <select name="CategoryId" class="form-select" aria-label="Default select example">
    <option value="1">"Sound" : "Men's clothing"</option>
    <option value="2">"Sound" : "Jewelery"</option>
    <option value="3">"Wish" : "Men's clothing"</option>
    <option value="4">"Wish" : "Jewelery"</option>
    <option value="5">"Wish" : "Electronics"</option>
    <option value="6">"Land" : "Jewelery"</option>
    <option value="7">"Land" : "Women's clothings"</option>
    <option value="8">"Rose" : "Women's clothings"</option>
    <option value="9">"J-king" : "Jewelery"</option>
    <option value="10">"J-king" : "Men's clothing"</option>
    <option value="11">"Bob-Bob" :"Jewelery" </option>
    <option value="12">"Bob-Bob" : "Women's clothings"</option>
    <option value="13">"High-Tech" : "Electronics"</option>
    </select>
    <button id="update-btn" type="submit">Update Item!</button>
</form>
<div id="item" style="opacity: 1">{{item.id}}</div>
<script>

const id = document.getElementById("item").innerText;
const updateBtn = document.getElementById("update-btn");
updateBtn.addEventListener("click",(e)=>{
fetch('http://localhost:3000/update/'+id, {
        method: 'UPDATE'
    })
})
</script> 